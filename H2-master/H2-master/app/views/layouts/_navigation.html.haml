    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        .navbar.navbar-fixed-top
          %nav.navbar-inner
            %ul.nav
              
              = link_to (image_tag("img1.png")), root_path, class: 'brand'
              = render 'layouts/navigation_links'
              %li
                %a{:href => "http://www.facebook.com/simplon.co", :target => "_blank"}
                  %i.icon-facebook-sign.icon-4x.social_icon
              %li
                %a{:href => "http://twitter.com/simplon.co", :target => "_blank"}
                  %i.icon-twitter-sign.icon-4x.social_icon




